doctype html
html
  head
    title "Jade Template Engine"
  body
    h1 "Conditions and Loops in Jade"
    ol -var option=#{option}
      if (option === "students")
        each name in Teachers
          li #{teacher}
      else if (option === "teachers" )
        each name in Students
          li #{teacher}
      else
          p "You have entered wrong option!"




